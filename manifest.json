{
    "manifest_version": 3,
    "name": "WPML Autopilot (Free API)",
    "version": "1.0.0",
    "description": "Auto translate Directorist WPML strings using free API",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
      "*://*/wp-admin/*",
      "https://libretranslate.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*/wp-admin/admin.php?page=wpml-string-translation*"
        ],
        "js": [
          "js/constants.js",
          "js/storage.js",
          "js/language-selector.js",
          "js/language-button.js",
          "js/translation-api.js",
          "js/dom-helpers.js",
          "js/main.js",
          "content.js"
        ]
      }
    ]
  }
  