{
    "manifest_version": 3,
    "name": "WPML Autopilot",
    "version": "1.1.0",
    "description": "Auto translate Directorist WPML strings with free or paid API",
    "author": "XhornCloud",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": [
      "*://*/wp-admin/*",
      "https://api.mymemory.translated.net/*",
      "https://libretranslate.de/*",
      "https://translate.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "WPML Autopilot Settings"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*/wp-admin/admin.php?page=wpml-string-translation*"
        ],
        "js": [
          "js/constants.js",
          "js/storage.js",
          "js/language-selector.js",
          "js/language-button.js",
          "js/translation-api.js",
          "js/dom-helpers.js",
          "js/main.js",
          "content.js"
        ]
      }
    ]
  }
  